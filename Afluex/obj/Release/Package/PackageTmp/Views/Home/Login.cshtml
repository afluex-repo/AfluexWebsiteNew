                color: #fff;
                font-weight: bold;
                margin-bottom: 40px;
                padding-top: 40px;
            }

        input#exampleInputEmail1 {
            border: 2px solid #4790b3;
            background-color: #000;
            border-left: 5px solid #4790b3;
            border-right: 5px solid #4790b3;
        }

        input#exampleInputPassword1 {
            border: 2px solid #4790b3;
            background-color: #000;
            border-left: 5px solid #4790b3;
            border-right: 5px solid #4790b3;
        }

        button.btn.btn-primary.login1 {
