        border: 1px solid #b5b0b0;
        margin: 0rem 0.4rem;
        border-radius: 8px;
        padding: 10px;
    }
</style>
@using (Html.BeginForm("DemoContact", "web", FormMethod.Post, new { @id = "form1", enctype = "multipart/form-data" }))
{

    @*<div class="main_loader">
        <div class="loader_inner" style="z-index:99999">
            <div class="loader">
                <div class="face">
                    <div class="circle"></div>
                </div>
