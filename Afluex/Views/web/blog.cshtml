
@model Afluex.Models.Blog
@{
    ViewBag.Title = "blog";
    Layout = "~/Views/Shared/Web_Layout.cshtml";
}
<section class="page-title text-center" style="background-image:url(../../afluexit/images/background/page_blog.jpeg);">
    <div class="container">
        <h1>Blog</h1>
    </div>
    <!--Page Info-->
    <div class="page-info">
        <div class="container clearfix">
            <ul class="bread-crumb clearfix">
                <li><a href="/web/software-development"><i class="fa fa-home"></i></a></li>
                <li><span><i class="fa fa-angle-right" aria-hidden="true"></i></span></li>
                <li>Blog</li>
            </ul>
        </div>
    </div>
</section>
<section class="blog_page">
    <div class="container">

        <div class="row mt-5">
            <div class="col-lg-8 col-md-9 col-sm-12">

                @if (Model != null)
                {
                    if (Model.List != null)
                    {
                        foreach (var item in Model.List)
                        {
                            <div class="blog_content mb-5">
                                <div class="blog_featured">
                                    <a href="/advertisement/blogdetails?id=@item.Pk_BlogId">
                                        <img src="~/afluexad/images/about-img.png" class="img-fluid" style="width:100%" />
                                        @* <img src="https://afluex.com/@item.FileName" alt="" class="img-fluid"/>*@
                                    </a>
                                </div>
                                <div class="blog_details">
                                    <div class="blog_title mt-2">
                                        <h2><a href="/advertisement/blogdetails?id=@item.Pk_BlogId">@item.Title</a> </h2>
                                    </div>
                                    <div class="blog_inner">
                                        <p>Every Advanced Google Search Operator You Need to Know</p>
                                        @*<p>
                                                @(new HtmlString(item.ShortDecription))
                                            </p>*@
                                        <div class="blog_time_eye clearfix">
                                            <ul class="list-unsyled p-0">
                                                @*<li class="list-inline-item"><span class="blog_icon"><i class="fa fa-user" aria-hidden="true"></i></span> By : Afluex Mutiservices LLP</li>*@
                                                <li class="list-inline-item"><span class="blog_icon"><i class="fa fa-user" aria-hidden="true"></i></span> By: @item.AddedBy</li>
                                                <li class="list-inline-item">
                                                    <span class="blog_icon">
                                                        <a href="/advertisement/blogdetails?id=@item.Pk_BlogId">
                                                            <i class="fa fa-eye" aria-hidden="true"></i>
                                                        </a>
                                                    </span> @item.AddedOn
                                                </li>
                                            </ul>
                                        </div>
                                        <div class="blog_btn">
                                            <h5><a href="/advertisement/blogdetails?id=@item.Pk_BlogId">Read More</a></h5>
                                        </div>
                                    </div>
                                </div>
                            </div>
                        }
                    }
                }
            </div>
            <div class="col-lg-4 col-md-3 col-sm-12">
