
@{
    ViewBag.Title = "blogdetails";
    Layout = "~/Views/Shared/Ad_LayoutPage.cshtml";
}
<div class="page-wrapper">
    <!-- Page Title -->
    <section class="page-title" style="background-image: url(/assets/images/background/1.jpg)">
        <div class="auto-container">
            <h2>Blog Details</h2>
            <ul class="bread-crumb clearfix">
                <li><a href="/advertisement/advertising-agency">Home</a></li>
                <li>Blog Detail</li>
            </ul>
        </div>
    </section>
    <!--End Page Title-->
    <!-- Sidebar Page Container -->
    <div class="sidebar-page-container">
        <div class="auto-container">
            <div class="row clearfix">

                <!-- Content Side -->
                <div class="content-side col-lg-8 col-md-12 col-sm-12">
@if (Model != null)
{
    if (Model.List != null)
    {
        foreach (var item in Model.List)
        {
                    <div class="blog-detail">
                        <div class="inner-box">

                                    <div class="image">
                                       <img src="@item.UploadFile" alt="" class="img-fluid">
                                    </div>
                              
                            <div class="lower-content">
                                <h3>@item.Title</h3>
                                <p>@(new HtmlString(item.Decription))</p>

                            </div>
                        </div>
                    </div>
        }
    }
}
                </div>

                <!-- Sidebar Side -->
                <div class="sidebar-side col-lg-4 col-md-12 col-sm-12">
                    <aside class="sidebar sticky-top">
                        <!-- Sidebar Widget / Popular Posts -->
                        <div class="sidebar-widget popular-posts">
                            <div class="widget-content">
                                <!-- Sidebar Title -->
                                <div class="sidebar-title">
                                    <h3>Latest Blogs</h3>
                                </div>

