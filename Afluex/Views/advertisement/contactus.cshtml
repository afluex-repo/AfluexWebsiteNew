                            </div>

                            <!-- Form Group -->
                            <div class="form-group col-lg-6 col-md-6 col-sm-12">
                                <span class="icon flaticon-chat-1"></span>
                                @Html.TextBoxFor(m => m.About, new { @class = "form-control", @Placeholder = "About" })
                            </div>

                            <!-- Form Group -->
                            <div class="form-group col-lg-6 col-md-6 col-sm-12">
                                <span class="icon flaticon-call-2"></span>
                                @Html.TextBoxFor(m => m.Mobile, new { @class = "form-control", @Placeholder = "Mobile", @onkeypress = "return isNumberKey(event);", @maxlength = "10" })
                            </div>

                            <!-- Form Group -->
                            <div class="form-group col-lg-12 col-md-12 col-sm-12">
                                <span class="icon flaticon-pen"></span>
                                @Html.TextAreaFor(m => m.CusMessage, new { @class = "form-control", @cols = "80", @rows = "3", @Placeholder = "Message", @required = "required" })
                                @Html.MathCaptcha()
                            </div>
                           
                            <div class="form-group col-lg-12 col-md-12 col-sm-12">
                                <input type="submit" class="theme-btn btn-style-seven" value="Submit" name="btnSave" onclick="return validateform()" />
                                @*<button type="submit" class="theme-btn btn-style-seven"><span class="txt">post a comment</span></button>*@
                            </div>

                        </div>
                    </form>

                </div>
                <!-- eND Contact Form -->

            </div>

        </div>
    </section>
    <!-- End Contact Page Section -->

</div>
}
