<script>
    $(document).ready(function () {
        setTimeout(function(){
            $('.captcha').html($('.captcha').html().replace('The answer is', ''))
    },200)

    });

    function validateform() {
        debugger;
        $(".errortext").removeClass("errortext");
        if ($('#Name').val() == '') {
            $("#Name").addClass('errortext');
            $('#Name').focus();
            return false;
        }
        if ($('#About').val() == '') {
            $("#About").addClass('errortext');
            $('#About').focus();
            return false;
        }
        if ($('.EmailID').val() == '') {
            $(".EmailID").addClass('errortext');
            $('.EmailID').focus();
            return false;
        }

        if ($('#Mobile').val() == '') {
            $("#Mobile").addClass('errortext');
            $('#Mobile').focus();
            return false;
        }

        if ($('#CusMessage').val() == '') {
            $("#CusMessage").addClass('errortext');
            $('#CusMessage').focus();
            return false;
        }
        $("#divload").css({ 'display': 'show' });

    }
    function ValidateEmailChecked(event) {
        debugger
        var panVal = $('.EmailID').val();
        var regpan = /^([\w-\.]+)@@((\[[0-9]{1,3}\.[0-9]{1,3}\.[0-9]{1,3}\.)|(([\w-]+\.)+))([a-zA-Z]{2,4}|[0-9]{1,3})(\]?)$/;

        if (regpan.test(panVal)) {
            $(".EmailID").removeClass('errortext');
        } else {
            alert("Invalid Email ID");
            $("#Email").val('');
            $("#Email").addClass('errortext');
        }
    }


    function isNumberKey(evt) {
        var charCode = (evt.which) ? evt.which : event.keyCode;
        if (charCode != 46 && charCode > 31
        && (charCode < 48 || charCode > 57))
            return false;

        return true;
    }
</script>
