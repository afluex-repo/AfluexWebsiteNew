@model Afluex.Models.Blog

@{
    ViewBag.Title = "BlogList";
    Layout = "~/Views/Shared/_AdminLayout.cshtml";
}

<style>
    .tblEditBtn :hover {
    background-color: #0ba83b;
    color: #fff;
}

.btn > i {
    /* margin-left: 0 !important; */
}
    .tblEditBtn i {
        font-size: 20px;
        position: relative;
        line-height: 1;
        background-color: #e1fbe2;
        border-color: transparent;
        color: #4caf50;
        padding: 8px;
        height: 100%;
        border-radius: 5px;
    }
</style>
<div class="row page-titles">
    <div class="col-md-5 align-self-center">
        <h3 class="text-primary">Blog List</h3>
    </div>
    <div class="col-md-7 align-self-center">
        <ol class="breadcrumb">
            <li class="breadcrumb-item"><a href="javascript:void(0)">Blog</a></li>
            <li class="breadcrumb-item active"> List</li>
        </ol>
    </div>
</div>

@using (Html.BeginForm("AllRequest", "Admin", FormMethod.Post, new { @id = "form1" }))
{
    <div class="container-fluid">

        <div class="row">
            <div class="col-12">
                <div class="card">
                    <div class="card-body">
                        <p style="color:red">

                            @TempData["Blog"]
                        </p>

                        <br />
                        <div class="table-responsive m-t-10">
                            <table id="example23" class="display nowrap table table-hover table-striped table-bordered" cellspacing="0" width="100%">
                                <thead>
                                    <tr>
                                        <th>Sr No.</th>
                                        <th>Action</th>
                                        <th>Title</th>
                                        <th>Short Description</th>
                                        <th>Description</th>
                                        <th>Added By</th>
                                        <th>Added On</th>
                                    </tr>
                                </thead>
                                <tbody>
                                    @if (Model != null)
                                    {
                                        if (Model.List != null)
                                        {
                                            int i = 1;
                                            foreach (var Item in Model.List)
                                            {
                                                <tr class="text-left">
                                                    <td>
                                                        @i
                                                    </td>
                                                    <td>
                                                        <a href="/Admin/PostBlog?ID=@Item.Pk_BlogId" class="btn btn-info btn-sm" style="margin-top:5px">Edit</a>
                                                        <a href="/Admin/DeleteBlog?id=@Item.Pk_BlogId" class="btn btn-danger btn-sm" style="margin-top:5px;margin-bottom:5px" onclick="return confirm('Are you sure you want to delete this Blog ?');">Delete</a>
                                                    </td>
                                                    <td>@Item.Title</td>
                                                    <td>@(new HtmlString(Item.ShortDecription))</td>
                                                    <td>@(new HtmlString(Item.Decription))</td>
                                                    <td>@Item.AddedBy</td>
                                                    <td>@Item.FileUpload</td>

                                                </tr>
                                                i++;
                                            }
                                        }
                                    }
                                </tbody>
                            </table>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
}



